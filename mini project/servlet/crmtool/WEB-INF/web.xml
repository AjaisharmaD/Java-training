<web-app>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>com.ideas2it.controller.CRMController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/user-login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDashboard</servlet-name>
        <servlet-class>com.ideas2it.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/get-users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/get-employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/create-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/search-to-update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/update-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDashboard</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LeadDashboard</servlet-name>
        <servlet-class>com.ideas2it.controller.LeadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeadDashboard</servlet-name>
        <url-pattern>/get-leads</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>