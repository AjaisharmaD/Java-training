<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ideas2it.controller.CRMController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Admin Dashboard Operations -->
    <servlet>
        <servlet-name>AdminDashboard</servlet-name>
        <servlet-class>com.ideas2it.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/get-users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/create-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/search-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/update-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/delete-user</url-pattern>
    </servlet-mapping>

    <!-- Manager Dashboard Operations -->
    <servlet>
        <servlet-name>ManagerDashboard</servlet-name>
        <servlet-class>com.ideas2it.controller.EmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerDashboard</servlet-name>
        <url-pattern>/get-employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerDashboard</servlet-name>
        <url-pattern>/create-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerDashboard</servlet-name>
        <url-pattern>/search-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerDashboard</servlet-name>
        <url-pattern>/update-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerDashboard</servlet-name>
        <url-pattern>/delete-employee</url-pattern>
    </servlet-mapping>

    <!-- Employee Dashboard for Lead Operations -->
    <servlet>
        <servlet-name>LeadDashboard</servlet-name>
        <servlet-class>com.ideas2it.controller.LeadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LeadDashboard</servlet-name>
        <url-pattern>/get-leads</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
